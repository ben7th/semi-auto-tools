{
  "name": "electron-simple",
  "version": "1.0.0",
  "description": "简洁的 Electron + React + TypeScript 项目",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:renderer\" \"pnpm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc --project electron && cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:renderer && pnpm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc --project electron",
    "start": "electron dist"
  },
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "styled-components": "^6.1.19",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
